@using OnlineBooking.ViewModel.Header
@model HeaderView

<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top @(!string.IsNullOrEmpty(Model.BackgroundColor) ? "" : "bg-dark")" style="background-color: @(Model.BackgroundColor)">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">@Model.Title</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    @{
                        foreach (var menu in Model.Menus.Items)
                        {
                            @if (menu.IsEnabled)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(menu.IsActived ? "active": "")" aria-current="page" href="/@menu.Url">@menu.Name</a>
                                </li>
                            }
                        }
                    }
                </ul>
                <div class="text-white">
                    @await Html.PartialAsync("~/Views/MacroPartials/Members/LoginStatus.cshtml")
                </div>
                <form class="d-flex">
                    <select class="form-control me-2" id="languageSelector">
                        @{
                            foreach (var language in Model.Languages.Items)
                            {
                                <option value="@language.Url" selected="@language.IsActive">@language.LanguageName</option>
                            }
                        }
                    </select>
                </form>
            </div>
        </div>
    </nav>
</header>
